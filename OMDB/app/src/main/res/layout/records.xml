<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/record_Card"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    style="@style/DetailCards"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#BCC152"
        style="@style/OverlayStyle"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <include layout="@layout/title"
                android:id="@+id/titleAndImage"/>
            <LinearLayout
                android:id="@+id/records"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                >
                <TextView
                    android:id="@+id/awards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Won 4 Oscars. Another 146 wins, 197 nominations."
                    style="@style/TextContent"
                    />
                <TextView
                    android:id="@+id/boxoffice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$292,568,851.00"
                    style="@style/TextContent"
                    />
                <TextView
                    android:id="@+id/website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="http://inceptionmovie.warnerbros.com"
                    style="@style/TextContent"
                    />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</android.support.v7.widget.CardView>