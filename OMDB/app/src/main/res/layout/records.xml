<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardBackgroundColor="#D81B60"
    style="@style/DetailCards"
    >
    <LinearLayout
        android:id="@+id/records"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        >
        <TextView
            android:id="@+id/awards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Won 4 Oscars. Another 146 wins, 197 nominations."
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            />
        <TextView
            android:id="@+id/boxoffice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$292,568,851.00"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            />
        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://inceptionmovie.warnerbros.com"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_margin="4dp"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>