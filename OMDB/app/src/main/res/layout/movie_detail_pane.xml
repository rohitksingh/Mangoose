<?xml version="1.0" encoding="utf-8"?>
<com.omdb.rohksin.omdb.CustomViews.Adjusting_movie_detail_pane xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0097A7"
    >
    <TextView
        android:id="@+id/movie"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Inception"
        android:textSize="35dp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="Genre"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/movie"
        />
</com.omdb.rohksin.omdb.CustomViews.Adjusting_movie_detail_pane>