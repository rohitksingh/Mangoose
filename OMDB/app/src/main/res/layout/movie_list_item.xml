<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="190dp"
    android:layout_width="match_parent"
    android:layout_marginBottom="3dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/posterThumbnail"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/posterThumbnail"
        android:layout_alignParentTop="true"
        android:text="Name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/posterThumbnail"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="2"
        />

    <TextView
        android:id="@+id/release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/posterThumbnail"
        android:text="year"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:layout_toRightOf="@id/posterThumbnail"
        android:layout_below="@id/title"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/posterThumbnail"
        android:text="@string/short_loren"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12dp"
        android:layout_toRightOf="@id/posterThumbnail"
        android:layout_below="@id/release_date"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="4"
        />
    <TextView
        android:id="@+id/moreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/posterThumbnail"
        android:text="More Info"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="10dp"
        android:layout_toRightOf="@id/posterThumbnail"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
        android:text="Thriller,Action,Fantasy"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignBaseline="@id/release_date"
        android:visibility="invisible"
        />
</RelativeLayout>
    </android.support.v7.widget.CardView>
